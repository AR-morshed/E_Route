<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arman.e_route.Route"
    android:background="@drawable/route"
    >


    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/totxt"
    android:fontFamily="serif"
    android:textSize="24sp"
    android:textStyle="normal|bold|italic"
    android:textColor="@android:color/holo_blue_bright"
        android:layout_alignBottom="@+id/from"
    android:layout_toEndOf="@+id/from"
        android:layout_alignTop="@+id/from" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="31dp"
        android:id="@+id/from"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_blue_bright"
        android:fontFamily="serif"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="80dp"
        android:layout_below="@+id/textView15"
        android:layout_alignRight="@+id/goButton"
        android:layout_alignEnd="@+id/goButton" />

    <TextView
        android:text="From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textStyle="normal|bold|italic"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView12"
        android:layout_toLeftOf="@+id/goButton"
        android:layout_toStartOf="@+id/goButton"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp" />


    <Button
        android:text="Lets Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goButton"
        android:typeface="monospace"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        android:layout_marginTop="15dp"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/totxt"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15"
        android:layout_marginTop="17dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/routes"
                android:textStyle="normal|bold|italic"
                android:textSize="20sp"
                android:layout_marginTop="12dp"

                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/background_dark" />
        </ScrollView>
    </LinearLayout>

    <TextView
        android:text="Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textStyle="normal|bold|italic"
        android:fontFamily="serif"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toRightOf="@+id/from"
        android:layout_toEndOf="@+id/from" />

    <TextView
        android:text="Bus n Routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView13"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/goButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
