<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arman.e_route.About"
    android:background="@drawable/about"
    >

    <TextView
        android:text="Member no : 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Md. Arman Morshed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Dept of CSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/textView5"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="AUST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <TextView
        android:text="Member no : 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:layout_marginTop="31dp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="Fairuz Shadmani Shishir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView9"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Dept of CSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="AUST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/textView11"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="Developer info:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
